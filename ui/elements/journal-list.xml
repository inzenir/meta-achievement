<Ui xmlns="http://www.blizzard.com/wow/ui/">
    <Include file="ui\elements\journal-row.xml"/>
    <Script file="ui\elements\journal-list.lua"/>

    <!-- Journal list element: inset + scrollframe + separate scrollbar -->
    <Frame name="MetaAchievementJournalListTemplate" virtual="true" inherits="InsetFrameTemplate3">
        <Size x="340" y="1"/>
        <Frames>
            <ScrollFrame name="$parentScrollFrame">
                <Anchors>
                    <Anchor point="TOPLEFT" x="6" y="-6"/>
                    <Anchor point="BOTTOMRIGHT" x="-22" y="6"/>
                </Anchors>
                <ScrollChild>
                    <Frame name="$parentScrollChild">
                        <Size x="1" y="1"/>
                    </Frame>
                </ScrollChild>
            </ScrollFrame>

            <Slider name="$parentScrollBar" inherits="MetaAchievementScrollBarTemplate">
                <Anchors>
                    <Anchor point="TOPRIGHT" x="-6" y="-24"/>
                    <Anchor point="BOTTOMRIGHT" x="-6" y="24"/>
                </Anchors>
            </Slider>
        </Frames>
        <Scripts>
            <OnLoad>MetaAchievementJournalList_OnLoad(self)</OnLoad>
        </Scripts>
    </Frame>
</Ui>
