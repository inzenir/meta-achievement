<Ui xmlns="http://www.blizzard.com/wow/ui/">
    <Script file="ui\elements\scrollbar.lua"/>

    <!-- Scrollbar: MinimalScrollBarTemplate (WowTrimScrollBarTemplate is for ScrollBox only and stays invisible as standalone). -->
