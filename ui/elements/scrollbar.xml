        <Size x="16" y="1"/>
        <Scripts>
            <OnLoad>MetaAchievementScrollBar_OnLoad(self)</OnLoad>
            <OnValueChanged>MetaAchievementScrollBar_OnValueChanged(self, value)</OnValueChanged>
        </Scripts>
    </Slider>
</Ui>
